{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@styled/*": [
        "components/*/Button.styled.tsx",
        "components/*/Header.styled.tsx",
        "components/*/Layout.styled.tsx",
        "components/*/NoteItem.styled.tsx",
        "pages/*/NoteDetail.styled.tsx",
        "pages/*/NoteList.styled.tsx",
        "pages/*/NotFound.styled.tsx"
      ]
    }
  },
  "include": ["src", "src/tests/setup.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
